{% extends 'base.html.twig' %}

{% block title %}
List Polities
{% endblock %}

{% block body %}
{% set tabActive = "polities" %}
{% include '/admin/menuAdmin.html.twig' %}

<div id="dialogAdd" class="dialog-base">
{% include('/admin/polity/dialogAddPolity.html.twig') %}
</div>
<div id="dialogDelete" class="dialog-base">
{% include('dialogDelete.html.twig') %}
</div>
<div class="alert alert-danger" id="alertDialog" role="alert"></div>

<ul class="nav justify-content-end">
  <li class="nav-item">
    <a class="nav-link text-primary" data-href='{{ path('polity_add') }}' id="addDialog" title="Add Polity"><i class="material-icons">add_circle</i></a>
  </li>

</ul>
<table class="table listTable">
  <tbody>
    {% for polity in polities %}
     <tr>
       <td><span class="text-secondary">{{ polity.name }}</span> </b></td>
       <td class="text-right">
         <a class="nav-link text-danger"
         onclick='deleteAction({{ polity.id }}, "{{ polity.name }}", "{{ path('polity_delete')}}"  )'
        id="deletePolity{{ polity.id }}" title="Delete: {{ polity.name }}"><i class="material-icons">cancel</i></a>
       </td>
     </tr>
    {% endfor %}
  </tbody>
</table>

{% block javascripts %}
<script src="{{ asset('js/app/dialogs.js') }}"></script>
{{ parent() }}
{% endblock %}

{% set routeName = 'country_list' %}
{% include 'pagination.html.twig' %}


<script>



$("#addDialog").click(function (e) {
   addActionShow();
   //var href = this.href;
   var href = $('#addDialog').data('href');
   e.preventDefault();
   $.ajax({
              type: "GET",
              url: href,
              dataType: 'html',
              success: function (json) {
                  $(".loaderBody").fadeOut("slow", function () {
                      $('#editcontent').html(json);
                      $('#editcontent').fadeIn("fast");
                  });
              }
          });
});

  $("form[name='appbundle_polity']").submit(function (e) {
    var href = '{{ path('polity_add')}}';
    var formData = {
            'name' : $('input[name="appbundle_polity[name]"]').val(),
            'description' : $('textarea[name="appbundle_polity[description]"]').val(),
            'dayStart' : $('select[name="appbundle_polity[dayStart]"]').val(),
            'monthStart' : $('select[name="appbundle_polity[monthStart]"]').val(),
            'yearStart' : $('input[name="appbundle_polity[yearStart]"]').val(),
            'dayEnd' : $('select[name="appbundle_polity[dayEnd]"]').val(),
            'monthEnd' : $('select[name="appbundle_polity[monthEnd]"]').val(),
            'yearEnd' : $('input[name="appbundle_polity[yearEnd]"]').val()
        };
console.log(formData);
    e.preventDefault();
    $.ajax({
               type: "POST",
               url: href,
               dataType: 'json',
               data: formData,
               encode: true,
               success: function (json) {
                 checkErrors(json);
               }
           })
           e.preventDefault();
  });
</script>

{% endblock %}
